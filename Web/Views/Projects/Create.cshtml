@model Domain.Entities.Project

@{
    ViewData["Title"] = "Create Project";
}

<h2 class="mb-4">Создать новый проект</h2>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Название проекта</label>
        <input asp-for="Name" class="form-control" placeholder="Введите название проекта" required />
        <div class="text-danger">
            <span asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Описание</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Введите описание проекта"></textarea>
        <div class="text-danger">
            <span asp-validation-for="Description"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Создать проект</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Отмена</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
