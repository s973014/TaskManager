@model IEnumerable<Domain.Entities.Project>

@{
    ViewData["Title"] = "Dashboard";
}

<h1>Task Manager Dashboard</h1>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create", "Projects")">Создать новый проект</a>
</p>

<hr />

<h2>Последние проекты</h2>

@if (!Model.Any())
{
    <p>Проекты пока отсутствуют. Создайте первый проект!</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Название проекта</th>
                    <th>Описание</th>
                    <th>Количество задач</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <td>@project.Name</td>
                        <td>@project.Description</td>
                        <td>@project.Tasks.Count()</td>
                        <td>
                            <a class="btn btn-sm btn-info" href="@Url.Action("Details", "Projects", new { id = project.Id })">Детали</a>
                            <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", "Projects", new { id = project.Id })">Редактировать</a>
                            <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Projects", new { id = project.Id })">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
